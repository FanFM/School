<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ddfsf sdfsfdsfs"
        android:textSize="@dimen/text_large"
        android:layout_marginLeft="@dimen/margins_16"
        android:layout_marginTop="@dimen/margins_16"
        android:layout_marginRight="@dimen/margins_16"
        android:layout_marginBottom="@dimen/margins_16"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDialogTitle"
        android:textSize="@dimen/text_medium"
        android:text="Dafasfaf afasdasda adfadasd asdadadads weytrj ;lksv;[ksp ;lsdkf;skf; ;lakf;akf kjdfghsgfuis hfaf kjahfkiah"
        android:layout_marginLeft="@dimen/margins_16"
        android:layout_marginRight="@dimen/margins_16"
        android:layout_marginBottom="@dimen/margins_4"
        android:textColor="@color/secondary_text"/>

    <Button
        android:id="@+id/btnAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agree"
        android:layout_below="@+id/tvDialogMessage"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/theme_color"
        android:layout_marginBottom="@dimen/margins_16"
        android:layout_marginTop="@dimen/margins_4"
        android:layout_marginRight="@dimen/margins_16"
        android:layout_marginLeft="@dimen/margins_4"/>

    <Button
        android:id="@+id/btnDisagree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disagree"
        android:layout_below="@+id/tvDialogMessage"
        android:layout_toLeftOf="@+id/btnAgree"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/theme_color"
        android:layout_marginLeft="@dimen/margins_16"
        android:layout_marginBottom="@dimen/margins_16"
        android:layout_marginRight="@dimen/margins_4"
        android:layout_marginTop="@dimen/margins_4"/>

</RelativeLayout>
